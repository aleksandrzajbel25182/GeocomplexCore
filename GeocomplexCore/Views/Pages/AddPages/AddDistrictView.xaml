<UserControl x:Class="GeocomplexCore.Views.Pages.AddPages.AddDistrictView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeocomplexCore.Views.Pages.AddPages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Background="#DFE7DD">
    <StackPanel>
        <Label Content="Проект:"
               FontSize="22"
               FontFamily="Arvo"
               Margin="15"
               />

        <Label Content="Наименование участка: "
               FontSize="18"
               FontFamily="Arvo"
               Margin="15"/>
        <TextBox Text="{Binding NameDist}"
                 FontSize="18"
                 Margin="15"
                 materialDesign:TextFieldAssist.UnderlineBrush="#166051"
                 />

        <Button Command="{Binding AddDiscrictCommand}"
            Content="Добавить"
            Style="{DynamicResource StyleButton}"
            Height="40"
            Margin="15"/>

    </StackPanel>
</UserControl>
